<Window x:Class="MidTerm991667498NoopurPatel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MidTerm991667498NoopurPatel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Add Book" Click="AddBook_Click" Width="100" Margin="10"/>
                <Button Content="Edit Book" Click="EditBook_Click" Width="100" Margin="10"/>
                <Button Content="Delete Book" Click="DeleteBook_Click" Width="100" Margin="10"/>
                <ComboBox x:Name="CategoryComboBox" Width="200" Margin="10">
                    <ComboBoxItem Content="Fiction"/>
                    <ComboBoxItem Content="Non-Fiction"/>
                    <ComboBoxItem Content="Reference"/>
                </ComboBox>
                <Button Content="View Books" Click="ViewBooks_Click" Width="100" Margin="10"/>
            </StackPanel>
            <ListBox x:Name="BookListBox" Width="750" Height="300" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
